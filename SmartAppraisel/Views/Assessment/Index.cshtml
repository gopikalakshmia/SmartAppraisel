@model IEnumerable<DL_SmartAppraisel.Model.AssessmentDetail>

@{
    ViewData["Title"] = "Assessments";
}

<h2>Assessment List</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Create New Assessment</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Assessment Name</th>
            <th>Assessment Date</th>
            <th>Description</th>
            <th>Is Active</th>
            <th style="width:180px;">Actions</th>
        </tr>
    </thead>
    <tbody>
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@item.AssessmentName</td>
                <td>@item.AssmtDate.ToString("dd-MMM-yyyy")</td>
                <td>@item.Description</td>
                <td>
                    @(item.IsActive ? "Yes" : "No")
                </td>
                <td>
                    <a asp-action="CreateResponse" asp-route-AssessmentID="@item.AssessmentID" class="btn btn-sm btn-warning">Add Response</a>
                    
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="5" class="text-center">No assessments found</td>
        </tr>
    }
    </tbody>
</table>
